# Storage mode: 'memory' or 'postgres'
STORAGE_MODE=memory

# PostgreSQL connection (only needed if STORAGE_MODE=postgres)
DATABASE_URL=postgresql://user:password@localhost:5432/ev_vpp

# Server configuration
PORT=3000
FRONTEND_URL=http://localhost:5173

# Encryption key for OAuth tokens (generate with: openssl rand -hex 32)
ENCRYPTION_KEY=your-secret-encryption-key-here

# OAuth configurations (add your client IDs and secrets)
TESLA_CLIENT_ID=
TESLA_CLIENT_SECRET=
